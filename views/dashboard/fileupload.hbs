<html>
{{>header}}
<body>

    <h1>Welcome to FileUpload Page</h1>
    {{#if filepath}}
        <img ng-src="data:image/jpg:base64,{{filepath}}"
    {{/if}}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
          
        </div><br><br><br><br><br><br>
            <div class="col-md-6">
                <form action="/fileupload" method="POST"  enctype="multipart/form-data">
                    <label>Name</label>
                    <input type="text" name="name">
                    <br>
                    <label>Email</label>
                    <input type="text" name="email">
                    <br>
                    <label>Image</label>
                    <input type="file" name="avatar">
                    <br>
                    <button type="submit">Save</button>
                </form>
            </div>
        </div>
    </div>
    
{{>footer}}
</body>
</html>